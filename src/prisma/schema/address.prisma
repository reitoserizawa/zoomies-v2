model Address {
  id         Int    @id @default(autoincrement())
  full_address String @unique
  address String
  address2     String?
  district String // state, province, prefecture etc...
  city       String
  postal_code String
  country    String
  
  latitude Float?
  longitude Float?

  dog_parks DogPark[]
  dog_friendly_dining DogFriendlyDining[]

    @@index([city]) // Example index for optimizing queries by city
  @@index([postal_code]) // Example index for postal code queries
}