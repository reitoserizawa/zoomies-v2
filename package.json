{
    "name": "zoomies-v2",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Reito Serizawa",
    "license": "MIT",
    "prisma": {
        "schema": "src/prisma",
        "seed": "ts-node src/prisma/seed.ts"
    },
    "scripts": {
        "build": "tsc --project ./",
        "start": "nodemon src/server.ts",
        "deploy": "node dist/server.js",
        "db:migrate-dev": "yarn prisma migrate dev",
        "db:push": "yarn prisma db push",
        "db:reset": "yarn prisma migrate reset",
        "db:seed": "yarn prisma db seed",
        "connect:docker": "docker exec -it zoomies-v2 bash && psql -h localhost -p 5432 -U postgres && \\c zoomies-v2"
    },
    "dependencies": {
        "@prisma/client": "^5.21.1",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/lodash": "^4.17.13",
        "@types/morgan": "^1.9.9",
        "@types/pg": "^8.11.10",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "pg": "^8.13.1",
        "prisma": "^5.21.1",
        "react-select": "^5.8.3"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/node": "^22.8.4",
        "nodemon": "^3.1.7",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    }
}
